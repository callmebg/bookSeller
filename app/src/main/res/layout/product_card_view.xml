<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    fresco:cardCornerRadius="4dp"
    fresco:contentPaddingBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_goodsIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_toRightOf="@id/iv_goodsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goodsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:hint="商品名称"
                android:maxEms="20"
                android:paddingLeft="5dp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_goodsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goodsTitle"
                android:layout_marginTop="10dp"
                android:hint="商品价格" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>